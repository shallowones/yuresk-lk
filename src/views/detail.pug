block content

  .page

    include includes/header

    main.main

      .wrapper
        h1.h1 Заявление № 28 от 13.11.2017 13:39

      .tabs
        .wrapper
          button(type="button", data-target="#detail").tabs__item.js-tab Детальная информация
          button(type="button", data-target="#discussion").tabs__item.js-tab Обсуждение
          button(type="button", data-target="#documents").tabs__item.active.warn.js-tab Документы
            span.number 1

      .wrapper

        #detail.display-none.js-target

          .flex.navigate
            a(href="#").button.gray
              i.icon.back
              | Назад к списку
            button(type="button").button.gray
              i.icon.status
              | Изменить статус
            button(type="button").button.gray
              i.icon.edit
              | Редактировать

          .bloc
            h2.h2 Статус заявки
            .list
              .left Статус
              .right Заявка подана
            .list
              .left Пояснение к статусу
              .right Заявка подана
            .list
              .left Максимальная мощность энергопринимающих устройств заявителя
              .right 154
