footer#footer
  #footer-center
    .footer-center-inner
      .swiper-container.slider__body.js-slider
        .swiper-wrapper
          each sliderItem in sliderItems
            a(href= sliderItem.link, target="_blank").swiper-slide.slider__i
              span.slider__i-img-wrap
                img(src='images/' + sliderItem.img)
                .slider__i-h= sliderItem.name
      .swiper-button-next
      .swiper-button-prev

    table.footer-actions
      tr
        td.footer-actions-copy
          div © 2012 АО «Югорская региональная электросетевая компания». Все права защищены.
          img(src="images/counter.png", width="88", height="31")
        td.footer-actions-mail
          a(href="mailto:office@yuresk.ru") office@yuresk.ru
          ul.footer-icons-list
            li
              a(href="/")
                img(src="images/home.gif", alt="на главную", title="на главную")
            li
              a(href="/feedback/")
                img(src="images/mail.gif", alt="напишите нам", title="напишите нам")
            li
              a(href="/sitemap/")
                img(src="images/map.gif", alt="карта сайта", title="карта сайта")
        td.footer-actions-icons
          form(action="/search/", method="post")
            table.search-form
              tr
                td
                  .placeholder.search-form-placeholder
                    label(for="search-form-text").input-hint Поиск по сайту
                    input(type="text", id="search-form-text", name="q").input-text
                td
                  input(type="submit", id="input-name", value="").search-form-submit
